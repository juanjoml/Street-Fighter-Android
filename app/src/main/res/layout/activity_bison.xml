<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bison">

    <ImageView
        android:id="@+id/imageViewBisonInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:onClick="funcionCerrar"
        app:layout_constraintBottom_toTopOf="@+id/textViewBisonInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bisoninfo" />

    <TextView
        android:id="@+id/textViewBisonInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="M.Bison es el líder de una organización llamada Shadaloo, es una organización criminal-terrorista en la que consiste en traficar armas y drogas en el mundo. Sin embargo, el objetivo real de Bison es incrementar su potencial dentro de Shadaloo. Bison decide recorrer el mundo buscando a luchadores poderosos para formar un ejército imparable. Sagat fue el primer luchador que decide servirlo a él a cambio de saciar su venganza contra Ryu ya que este lo humilló en el primer torneo Street Fighter luego se uniría Vega y finalmente Balrog."
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBisonInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>